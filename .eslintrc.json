{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    // Disable react-hooks rules
    "react-hooks/rules-of-hooks": "off",
    "react-hooks/exhaustive-deps": "off",
    
    // Disable TypeScript "no-explicit-any" rule
    "@typescript-eslint/no-explicit-any": "off",

    // Add any other rules you wish to disable
    "no-console": "off", // Disables console warnings
    "@typescript-eslint/no-unused-vars": "off", // Disable unused variable check
    "no-debugger": "off", // Disable debugger warnings
    "react/prop-types": "off" // Disable prop-types check if using TypeScript
  }
}
